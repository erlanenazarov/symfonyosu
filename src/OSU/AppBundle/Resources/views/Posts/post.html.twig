{% extends "::base.html.twig" %}

{% block title %}News{% endblock %}

{% block header_container_wrap %}
    {{ parent() }}
    <div class="page-title">News</div>
{% endblock %}

{% block content %}
    <hr />
    <p>{{ post.content }}</p>
    <p class="new-item-date">{{ post.date|date('Y-m-d') }}</p>
    <p><a href="{{ path('post', {id: post.id}) }}">Read more...</a></p>
    <hr />
{% endblock %}
